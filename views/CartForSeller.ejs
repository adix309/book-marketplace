                        </h5>
                        <p class="text-muted">
                            <%= book.author %>
                        </p>

                        <p class="fw-bold text-success">
                            <%= book.price %> KM
                        </p>

                        <p>
                            <span class="badge bg-info">
                                <%= book.genre || 'Å½anr' %>
                            </span>

                            <br>
                            <strong>Jezik:</strong>
                            <%= book.language || 'â€”' %>
                        </p>

                        <button class="btn btn-success" onclick="Order('PRIHVACENA', <%= book.id %>)">Prihvati</button>
                        <button class="btn btn-outline-danger" onclick="Order('ODBIJENA',<%= book.id %>)">Odbi</button>
                    </div>
                </div>
            </div>
            <% }) %>
    </div>
</section>








<script>
    window.Order = function (stanje,id) {

        console.log(id, "---------------- ", stanje);

        $.ajax({
            url: `/users/setOrder`,
            method: "POST",
            data: JSON.stringify({ stanje,id }),
            contentType: "application/json",

            success: () => {
                //alert("Prihvaceno");
                $(`#book_${id}`).remove(); // Uklanja karticu sa stranice
            },

            error: (e) => {
                console.error(e);
                alert("Error deleting book!!!!!!!!!!!");
            },
        });

    }


</script>