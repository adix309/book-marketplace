    <div class="row g-4">
        <% MyPartFromCart.forEach(book=> { %>
            <div class="col-md-6 col-lg-4" id="book_<%= book.id %>">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">

                        <h5 class="card-title">
