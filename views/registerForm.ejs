<h1 class="text-center mb-4">
  <%= title %>
</h1>

<div class="container mt-4 p-4 border rounded bg-light">
  <form id="registration_form">

    <!-- Ime -->
    <div class="form-group mb-3">
      <label>Ime</label>
      <input type="text" class="form-control" name="first_name" required>
    </div>

    <!-- Prezime -->
    <div class="form-group mb-3">
      <label>Prezime</label>
      <input type="text" class="form-control" name="last_name" required>
    </div>

    <!-- Email -->
    <div class="form-group mb-3">
      <label>Email</label>
      <input type="email" class="form-control" name="email" required>
    </div>

    <!-- Password -->
    <div class="form-group mb-3">
      <label>šifra</label>
      <input type="password" class="form-control" name="password" required>
    </div>

    <!-- Godine -->
    <div class="form-group mb-3">
      <label>Godine</label>
      <input type="number" class="form-control" name="age" required>
    </div>

    <!-- Spol -->
    <div class="form-group mb-3">
      <label>Spol</label>
      <select class="form-control" name="gender" required>
        <option value="">Select gender</option>
        <option value="Male">Musko</option>
        <option value="Female">Žensko</option>
        <option value="Other">Ostalo</option>
      </select>
    </div>

    <!-- Telefon -->
    <div class="form-group mb-3">
      <label>Broj telefona</label>
      <input type="tel" class="form-control" name="phone" placeholder="+387 222-333">
    </div>

    <!-- Država -->
    <div class="form-group mb-3">
      <label>Država</label>
      <input type="text" class="form-control" name="country" placeholder="BiH">
    </div>

    <!-- Grad -->
    <div class="form-group mb-3">
      <label>Grad</label>
      <input type="text" class="form-control" name="city" placeholder="Sarajevo">
    </div>

    <!-- STATUS (hidden – backend kontrola) -->
    <input type="hidden" name="status" value="AKTIVAN">



    <div class="form-check">
      <input class="form-check-input" type="radio" name="role" value="Kupac">
      <label class="form-check-label">Kupac</label>
    </div>

    <div class="form-check">
      <input class="form-check-input" type="radio" name="role" value="Prodavac" checked>
      <label class="form-check-label">Prodavac</label>
    </div>



    <div id="kupac-fields" class="mt-4 border p-3 rounded bg-white" style="display:none">


      <h5 class="mb-3">Preferencije kupca</h5>


      <!-- ŽANROVI -->
      <div class="form-group mb-4">
        <label class="fw-bold mb-2 d-block">Žanrovi koje voliš</label>

        <div class="row">
          <% zanrovi.forEach(function(zanr) { %>
            <div class="col-md-4">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="genre[]" value="<%= zanr.id %>">
                <label class="form-check-label">
                  <%= zanr.name %>
                </label>
              </div>
            </div>
            <% }) %>
        </div>
      </div>
      
      <!-- JEZICI -->
      <div class="form-group mb-3">
        <label class="fw-bold mb-2 d-block">Jezici koje čitaš</label>

        <div class="row">
          <% jezici.forEach(function(jezik) { %>
            <div class="col-md-4">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="language[]" value="<%= jezik.id %>">
                <label class="form-check-label">
                  <%= jezik.name %>
                </label>
              </div>
            </div>
            <% }) %>
        </div>
      </div>




    </div>





    <!-- Opis -->
    <div class="form-group mb-4">
      <label>About you</label>
      <textarea class="form-control" name="bio" rows="4" placeholder="Short description about yourself..."></textarea>
    </div>

    <button type="submit" class="btn btn-success w-100">Register</button>

    <div class="text-center mt-3">
      <p class="mb-0">Already have an account?</p>
      <a href="/users/usersLogin" class="btn btn-link">Login here</a>
    </div>

  </form>
</div>