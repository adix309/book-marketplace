  <!-- ================= NAJPOPULARNIJE ================= -->
  <section class="mb-5">
    <h4 class="mb-3">üî• Najpopularnije knjige</h4>

    <div class="row g-4">
      <% AllBooks.forEach(book => { %>
        <div class="col-md-6 col-lg-4">
          <div class="card h-100 shadow-sm book-card"
                id="book_<%= book.id %>"
                class="card book-card"
                onclick='openBookModal(<%- JSON.stringify(book) %>)'>

                <div class="card-body">
                    <h5 class="card-title"><%= book.title %></h5>
                    <p class="text-muted mb-1"><%= book.author %></p>

                    <p class="fw-bold text-success">
                        <%= book.price == 0 ? 'Razmjena' : book.price + ' KM' %>
                    </p>
                    

                    <p >
                <span class="badge bg-info"><%= book.genre || '≈Ωanr' %></span>
                <span class="badge bg-success"><%= book.status %></span>
                <strong>Jezik:</strong> <%= book.language || '‚Äî' %>

              </p>
                </div>

          </div>
        </div>
      <% }) %>
    </div>
  </section>

  <!-- ================= RANDOM ================= -->
