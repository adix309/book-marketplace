#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('myproject:server');
var http = require('http');

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);





/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}


//web soketi ----odave  je moj kod
const { Server } = require("socket.io");
const io = new Server(server);

app.set("io", io);
//app.io=io; moglo je i ovako 


// userId -> socketId
const onlineUsers = new Map();
app.set("onlineUsers", onlineUsers);//treba u kontrolerima

io.on("connection", (socket) => {
  console.log("WS  Novi korisnik:", socket.id);
  
  socket.on("register_user", (userId) => {
    if (!userId) return;
    onlineUsers.set(userId, socket.id);
    console.log("ðŸ‘¤ USER ONLINE, IDod usera:", userId);
  });
  /*ovo je mozda bolje bilo rjesit na nacin da sam piso socket.userId = userId; onlineUsers.set(userId, socket.id); i onda da brisem sa   if (socket.userId) {
    onlineUsers.delete(socket.userId);  } */


    // 1) server sluÅ¡a kad admin poÅ¡alje alert
  socket.on("admin_alert", ({ message }) => {
    if (!message) return;
    socket.broadcast.emit("receive_admin_alert", {message});//svima osim tebi 
  });

//socket.emit("notify_user", ({ toUserId:17, message:"poruka od korisnika" }) )
   socket.on("notify_user", ({ toUserId, message }) => {
    const targetSocketId = onlineUsers.get(toUserId);
    if (targetSocketId) {
      io.to(targetSocketId).emit("receive_notification", {message});
    }
  });
  

  socket.on("disconnect", () => {
    for (const [userId, socketId] of onlineUsers.entries()) {
      if (socketId === socket.id) {
        onlineUsers.delete(userId);
        console.log("ðŸ‘¤ USER OFFLINE,id od usera:", userId);
        break;
      }
    }
  });


});





//------------------------------------ 


/**
 * Event listener for HTTP server "listening" event.
 * 
 * 
 * 
 * const konj = new Konj()
app.use((req, res, next) => {
    req.io = konj;  
    next();
});

zar to nije isto kao ovo req je objekat i sad sam u tom objetu 
uzo vjrendost io koji je key i stavio mu value konj
 
*/

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
